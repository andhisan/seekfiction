{
  "name": "api",
  "version": "0.0.25",
  "private": true,
  "scripts": {
    "lint": "eslint ./src --ext .js,.ts",
    "build": "npm run lint && tsc",
    "emulator": "npm run build && firebase emulators:start --import ./exported_for_local_development",
    "dev": "export GOOGLE_APPLICATION_CREDENTIALS=\".serviceAccountKey.json\" && npm run emulator",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "firestore:sync": "./firestore_import/sync.sh",
    "firestore:deploy": "firebase deploy --only firestore",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@sasigume/seekfiction-commons": "*",
    "@types/urlsafe-base64": "^1.0.28",
    "axios": "^0.21.4",
    "firebase-admin": "^9.12.0",
    "firebase-functions": "^3.14.1",
    "meilisearch": "^0.20.2",
    "urlsafe-base64": "^1.0.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.15.7",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^4.0.0",
    "firebase-functions-test": "^0.3.2",
    "prettier": "^2.4.1",
    "typescript": "^3.8.0"
  }
}
