{
  "name": "seekfiction",
  "version": "0.0.7-1",
  "author": "sasigume <sasigume@gmail.com>",
  "description": "A next-generation anime/manga database",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/api",
      "packages/web-next",
      "packages/seekfiction-commons"
    ]
  },
  "scripts": {
    "release": "standard-version",
    "push": "git push --follow-tags origin main",
    "prepare": "npx husky install",
    "api:lint": "yarn workspace api lint",
    "api:build": "yarn workspace api build",
    "api:dev": "yarn workspace api dev",
    "api:deploy": "yarn workspace api deploy",
    "api:firestore:sync": "yarn workspace api firestore:sync",
    "api:firestore:deploy": "yarn workspace api firestore:deploy",
    "next:dev": "yarn workspace web-next dev",
    "next:lint": "yarn workspace web-next lint",
    "next:test": "yarn workspace web-next test"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "repository": "git@github.com:sasigume/seekfiction.git",
  "license": "MIT",
  "devDependencies": {
    "@babel/eslint-parser": "^7.14.7",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-vue": "^7.12.1",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "standard-version": "^9.3.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "typescript": "^4.4.3"
  },
  "lint-staged": {
    "./packages/{web-next,api}/**/*.{js,ts,tsx}": "eslint",
    "./packages/api/**/*.{json,js,ts}": [
      "./bump_version.sh api"
    ],
    "./packages/seekfiction-commons/**/*": [
      "./bump_version.sh seekfiction-commons"
    ]
  }
}
